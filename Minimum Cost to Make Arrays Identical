class Solution {
    public long minCost(int[] arr, int[] brr, long k) {
        long directCost=0;
        long inDirectCost=k;
        int n=arr.length;

        for(int i=0;i<n;i++){
            directCost=directCost+Math.abs(arr[i]-brr[i]);
        }

        Arrays.sort(arr);
        Arrays.sort(brr);

        for(int i=0;i<n;i++){
            inDirectCost=inDirectCost+Math.abs(arr[i]-brr[i]);
        }

        return Math.min(directCost,inDirectCost);
    }
}
